{% extends "::layout_admin.html.twig" %}
{% block content %}




    <div id="page-wrapper">


        <div class="row">
            <!--  page header -->
            <div class="col-lg-12">
                <h1 class="page-header">Liste des commandes</h1>
            </div>
            <!-- end  page header -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <!-- Advanced Tables -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <ul class="nav" >
                            <li>
                                <!-- search section-->
                                <div class="input-group "><div class="text-right">
                                        <input style="width:200px;" type="text" class="form-control" placeholder="Search...">
                                        <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                                    </div></div>
                                <!--end search section-->
                            </li></ul>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                <tr>

                                    <th>Reference</th>
                                    <th>Utlisateur</th>
                                    <th>Date création commande</th>
                                    <th>Titre évenement</th>
                                    <th>Classe billet</th>
                                    <th>Quantité</th>
                                    <th>Payer ?</th>



                                </tr>


                                </thead>
                                <tbody>
                                {%  for c in cmd %}
                                    <tr class="odd gradeX">
                                        <td class="center">{{ c.reference }}</td>
                                        <td class="center">{{ c.usercomd.username}}</td>
                                        <td class="center">{{ c.date|date('d/m/y H:i')  }}</td>


                                         <td class="center">{{ c.elementCmd.Classebillet.evenement.titreEvenement}}</td>
                                        <td class="center">{{ c.elementCmd.Classebillet.classe }}</td>
                                          <td class="center">{{ c.elementCmd.quantite }}</td>


                                        {% if c.payer == 0 %}
                                            <td class="center">NON</td>
                                        {% elseif c.payer == 1  %}
                                            <td class="center">OUI</td>
                                        {% else %}
                                            <td class="center">NON</td>
                                        {% endif %}
                                    </tr>



                                {% endfor %}

                                </tbody>

                            </table>
                             <div class="text-center">  {{ knp_pagination_render(cmd) }} </div>
                        </div>

                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>



    </div>
    <!-- end page-wrapper -->

    <!-- end wrapper -->


    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>

{% endblock content %}
